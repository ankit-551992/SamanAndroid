<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/light_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Card Number" />

        <EditText
            android:id="@+id/cardNumberEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:hint="000000000000000000"
            android:inputType="numberSigned"
            android:maxEms="16"
            android:singleLine="true"
            android:textColorHint="@color/grey" />

        <TextView
            android:textColor="@color/light_grey"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Valid Thru - Expiry Date" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/editText_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:hint="@string/month"
                android:imeOptions="actionDone"
                android:inputType="number" />

            <EditText
                android:id="@+id/editText_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:hint="@string/year"
                android:imeOptions="actionDone"
                android:inputType="number" />

        </LinearLayout>


        <TextView
            android:textColor="@color/light_grey"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Cardholder Name" />

        <EditText
            android:id="@+id/cardHolderEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ahmad"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:textColorHint="@color/grey" />

        <TextView
            android:textColor="@color/light_grey"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Card Secure Code (CVV/CVC)" />

        <EditText
            android:id="@+id/cvcEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:hint="000"
            android:singleLine="true"
            android:textColorHint="@color/grey"/>

        <TextView
            android:textColor="@color/light_grey"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please use OTP 5548 to complete your transaction with card ending code 7078. If you have not initiated this payment. Any queries, please contact Card Issuer." />

        <EditText
            android:id="@+id/et_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:hint="0000"
            android:singleLine="true"
            android:textColorHint="@color/grey"/>
    </LinearLayout>

    <Button
        android:id="@+id/addBt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/yellow_button"
        android:text="Add Card"
        android:textColor="@color/white"
        android:textStyle="bold" />
</RelativeLayout>

