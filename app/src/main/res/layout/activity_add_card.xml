<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="My Payment"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="My Payment Content"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/cardHolderEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_edit_text_background"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:inputType="textCapWords"
                android:hint="Card Holder Name"
                android:padding="10dp"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/cardNumberEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_edit_text_background"
                android:gravity="start"
                android:inputType="numberSigned"
                android:hint="4242424242424242"
                android:singleLine="true"
                android:maxEms="16"
                android:padding="10dp"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/expireTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ic_edit_text_background"
                    android:hint="10/2021"
                    android:lines="1"
                    android:layout_marginRight="5dp"
                    android:padding="10dp"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp" />

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/cvcEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/ic_edit_text_background"
                    android:gravity="start"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:hint="Security No.(CVC)"
                    android:layout_marginLeft="5dp"
                    android:padding="10dp"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>


    <Button
        android:id="@+id/addBt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/yellow_button"
        android:text="Add Card"
        android:textColor="@color/white"
        android:textStyle="bold" />
    </RelativeLayout>

