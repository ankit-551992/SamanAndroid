<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="RelativeOverlap"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/neo_sans"
                    android:id="@+id/tv_done"
                    android:text="@string/Done"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:fontFamily="@font/neo_sans"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:text="@string/sort_by"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_filer_close"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_cross"
                    android:tint="@color/grey"
                    android:contentDescription="@string/contentDescription" />

            </RelativeLayout>

            <CheckBox
                android:id="@+id/checkbox_high_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/neo_sans"
                android:buttonTint="@color/colorPrimary"
                android:text="@string/price_high"/>

            <View
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_grey"/>

            <CheckBox android:id="@+id/checkbox_low_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/neo_sans"
                android:buttonTint="@color/colorPrimary"
                android:text="@string/low_price"/>
            <View
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_grey"/>

            <CheckBox android:id="@+id/checkbox_new_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/neo_sans"
                android:buttonTint="@color/colorPrimary"
                android:text="@string/new_in"/>

            <View
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_grey"/>

            <CheckBox android:id="@+id/checkbox_best_sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/neo_sans"
                android:buttonTint="@color/colorPrimary"
                android:text="@string/best_sell"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>