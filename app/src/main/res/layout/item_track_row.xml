<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_status"
            android:layout_gravity="center_vertical"
            android:src="@drawable/matching_circle"
            android:layout_width="@dimen/matching_circle_size"
            android:layout_height="@dimen/matching_circle_size"/>

        <View
            android:id="@+id/view"
            android:layout_gravity="center_horizontal"
            android:background="@color/off_grey"
            android:layout_width="@dimen/matching_view_line_width"
            android:layout_height="@dimen/matching_view_line_height"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="-5dp"
            android:id="@+id/status_textView"
            android:text=""
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/message_textView"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/date_textView"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:text="10/31/2018 10:10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>