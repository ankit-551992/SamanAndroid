<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_margin="10dp"
    android:background="@drawable/favorites_background"
    tools:ignore="NamespaceTypo">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:padding="5dp"
                android:src="@drawable/dummy_mobile"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="110dp" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content">

                <TextView
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_store"
                    android:gravity="center"
                    android:drawableStart="@drawable/ic_store"
                    android:text="@string/ud_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_product_description"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text="@string/dummy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/dummy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <RelativeLayout
                android:padding="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent">

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_quantity"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:background="@drawable/favorites_background"
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_add_quantity"
                    android:tint="@color/light_grey"
                    android:layout_above="@+id/tv_quantity"
                    android:src="@drawable/ic_add"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_remove_quantity"
                    android:tint="@color/light_grey"
                    android:layout_below="@+id/tv_quantity"
                    android:src="@drawable/ic_remove"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:text="@string/currency_omr"
                    android:paddingBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:paddingTop="20dp"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:text="@string/currency_omr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>